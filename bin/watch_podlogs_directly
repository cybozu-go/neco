#!/bin/sh -e

tail_once() {
    host="$1"
    sudo ip netns exec operation ssh -F ssh_config \
        ${host} "test -f .kube/config" || return
    sudo ip netns exec operation ssh -F ssh_config \
        ${host} -- stern --max-log-requests=1000 --all-namespaces '.*' 2>&1 | (while read i; do echo "$(date) : ${i}"; done)
}

tail_forever() {
    host="$1"

    while true; do
        tail_once $host || continue
        sleep 3
    done
}

chmod 600 ./dctest/dctest_key
cp ./dctest/dctest_key .
cp ./dctest/ssh_config .

tail_forever boot-0
