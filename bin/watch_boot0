#!/bin/sh -e

. $(dirname $0)/env

# Run multi-host test
for i in $(seq 300); do
  if $GCLOUD compute ssh --zone=${ZONE} cybozu@${INSTANCE_NAME} -- pmctl2 node show boot-0 >/dev/null; then
    break
  fi
  sleep 1
done
if [ $i = 300 ]; then
  echo &>2 "Timed-out for launching boot-0..."
  exit 1
fi

$GCLOUD compute ssh --zone=${ZONE} cybozu@${INSTANCE_NAME} -- \
  sudo pmctl2 node enter boot-0
