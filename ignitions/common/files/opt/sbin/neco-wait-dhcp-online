#!/bin/sh

wait_for_address() {
    for i in $(seq 500); do
        ip -o -4 address | grep -w "eth0\|eth1\|eno1\|eno2\|eno12399\|eno12399np0\|eno12409\|eno12409np1" >/dev/null
        [ "$?" -eq 0 ] && return
        sleep 1
    done

    echo >&2 "Timed out to wait for ip addresses are assigned"
    exit 1
}

/usr/sbin/sysctl -w net.ipv4.conf.all.rp_filter=2
wait_for_address
